{
  "name": "nicopinp",
  "version": "1.1.1",
  "main": "index.js",
  "author": "ru_shalm <ru_shalm@hazimu.com>",
  "license": "MIT",
  "scripts": {
    "build": "run-s clean build:*",
    "build:js": "NODE_ENV=production webpack",
    "watch": "run-p watch:*",
    "watch:js": "webpack -w",
    "clean": "rimraf './app/js/*'",
    "format": "prettier --write src/**/*.js",
    "zip": "run-s format build zip:*",
    "zip:mkdir": "mkdirp _dist",
    "zip:zipping": "deployment-zip ./app",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.{js,json}": [
      "prettier --write",
      "git add"
    ],
    "app/manifest.json": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions"
  ],
  "devDependencies": {
    "@babel/core": "^7.6.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/preset-env": "^7.6.0",
    "@rutan/deployment-zip": "^0.1.0",
    "babel-loader": "^8.0.6",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9"
  },
  "dependencies": {
    "core-js": "^3.2.1"
  }
}
